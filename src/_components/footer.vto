<footer class="sl-c-footer">
	<div class="sl-c-footer__content">
		<div class="sl-c-footer__social-icons">
			<a
				href="{{ site.github.url }}"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="{{ site.github.name }}"
			>
				<i class="fab fa-github"></i>
			</a>
			<a
				href="{{ site.steam.url }}"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="{{ site.steam.name }}"
			>
				<i class="fab fa-steam"></i>
			</a>
			<a
				href="{{ site.youtube.url }}"
				target="_blank"
				rel="noopener noreferrer"
				aria-label="{{ site.youtube.name }}"
			>
				<i class="fab fa-youtube"></i>
			</a>
		</div>
		<p class="sl-c-footer__copyright">&copy; {{ new Date().getFullYear() }}
			{{ site.author.name }}</p>
	</div>
</footer>
